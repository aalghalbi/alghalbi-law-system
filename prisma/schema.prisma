generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  createdAt DateTime @default(now())

  clients   Client[]
  cases     Case[]
}

model Client {
  id        String   @id @default(cuid())
  fullName  String
  email     String?
  phone     String?
  notes     String?
  createdAt DateTime @default(now())

  ownerId   String
  owner     User     @relation(fields: [ownerId], references: [id])

  cases     Case[]
}

model Case {
  id          String   @id @default(cuid())
  title       String
  referenceNo String?
  status      String   @default("OPEN")
  priority    String   @default("NORMAL")
  description String?
  openedAt    DateTime @default(now())
  closedAt    DateTime?
  createdAt   DateTime @default(now())

  ownerId     String
  owner       User     @relation(fields: [ownerId], references: [id])

  clientId    String
  client      Client   @relation(fields: [clientId], references: [id])
}
